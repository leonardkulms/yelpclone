<% include ../partials/header.ejs %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add a new Comment to <%=library.name%>!</h1>

        <div style="margin: 30px auto; width: 30%;">
            <form action="/libraries/<%=library._id%>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[author]" placeholder="author">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/libraries">Go Back</a>
        </div>
    </div>
</div>


